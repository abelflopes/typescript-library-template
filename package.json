{
  "name": "@abelflopes/typescript-library-template",
  "version": "1.0.0",
  "description": "Example package built from the typescript library template",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "tsc -p tsconfig.build.json -w",
    "build": "tsc -p tsconfig.build.json",
    "test": "jest",
    "lint": "eslint . --ext ts,tsx",
    "format": "npx prettier . --check --cache",
    "docs": "typedoc"
  },
  "keywords": [
    "typescript",
    "library",
    "template",
    "boilerplate"
  ],
  "author": "Abel Lopes (@abelflopes)",
  "devDependencies": {
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.22.15",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.0.0",
    "eslint-config-ts-important-stuff": "^1.1.0",
    "eslint-config-ts-react-important-stuff": "^3.0.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-config-xo-typescript": "^1.0.1",
    "eslint-plugin-etc": "^2.0.3",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-unicorn": "^48.0.1",
    "eslint-plugin-workspaces": "^0.9.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "typedoc": "^0.25.1",
    "typescript": "^5.2.2"
  }
}
