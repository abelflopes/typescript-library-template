{
  "name": "@abelflopes/typescript-library-template",
  "version": "1.0.0",
  "description": "Example package built from the typescript library template",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "start": "tsc -p tsconfig.build.json -w",
    "build": "tsc -p tsconfig.build.json",
    "test": "jest",
    "lint": "eslint . --ext ts,tsx",
    "format": "npx prettier . --check --cache",
    "docs": "typedoc",
    "todo": "npx leasot '**/**' '.**/**' -i '**/node_modules/**' -S -x",
    "clean": "rm -rf generated-docs dist node_modules"
  },
  "keywords": [
    "typescript",
    "library",
    "template",
    "boilerplate"
  ],
  "author": "Abel Lopes (@abelflopes)",
  "devDependencies": {
    "@abelflopes/eslint-config-tsr-pro": "^1.0.1",
    "@abelflopes/prettier-config-pro": "^1.0.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.22.15",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.5",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^8.49.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "semantic-release": "^22.0.1",
    "typedoc": "^0.25.1",
    "typescript": "^5.2.2"
  },
  "homepage": "https://github.com/abelflopes/typescript-library-template#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/abelflopes/typescript-library-template.git"
  },
  "bugs": {
    "url": "https://github.com/abelflopes/typescript-library-template/issues"
  }
}
